{% extends "base.twig" %}
{% block styles %}
    <link href="../../css/bootstrap.min.css" rel="stylesheet">
    <link href="../../css/starter-template.css" rel="stylesheet">
{% endblock %}

{% block navigation %}
    <li><a href="\main\logout">Выход</a></li>
    <li class="active"><a href="\users">Список пользователей</a></li>
    <li><a href="\files">Список файлов</a></li>
{% endblock %}

{% block content %}
    <div class="container">
        <table class="table table-bordered">
            <tr>
                <th>Пользователь(логин)</th>
                <th>Имя</th>
                <th>Возраст</th>
                <th>Описание</th>
                <th>Фотография</th>
                <th>Действия</th>
            </tr>
            {% for user in data['users'] %}
            <tr>
                <td>{{user['login']}}</td>
                <td>{{user['name']}}</td>
                <td>{{user['age']}} - {% if user['age'] > 18 %} Совершеннолетний {% endif %}{% if user['age'] <= 18 %} Несовершеннолетний {% endif %} </td>
                <td>{{user['description']}}</td>
                <td><img src="{{user['avatar']}}" alt=""></td>
                <td>
                    <a href="\users\delete\{{user['id']}}">Удалить пользователя</a>
                </td>
            </tr>
            {% endfor %}
        </table>

    </div><!-- /.container -->
{% endblock %}